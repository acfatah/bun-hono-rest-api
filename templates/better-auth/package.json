{
  "name": "better-auth",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --hot src/index.ts",
    "db": "bunx --bun drizzle-kit",
    "db:generate": "bunx --bun drizzle-kit generate",
    "db:migrate": "bunx --bun drizzle-kit migrate",
    "db:push": "bunx --bun drizzle-kit push",
    "db:pull": "bunx --bun drizzle-kit pull",
    "lint": "bunx --bun eslint",
    "lint:changed": "{ git diff --name-only -z --diff-filter=d --relative HEAD; git ls-files -z --others --exclude-standard -- ':./'; } | xargs -0 -r bunx --bun eslint --pass-on-no-patterns --no-warn-ignored",
    "lint:staged": "bunx --bun eslint --pass-on-no-patterns --no-warn-ignored $(git diff --relative --cached --name-only --diff-filter=d)",
    "lint:inspect": "bunx --bun eslint --inspect-config",
    "format": "bunx --bun eslint --fix",
    "format:changed": "{ git diff --name-only -z --diff-filter=d --relative HEAD; git ls-files -z --others --exclude-standard -- ':./'; } | xargs -0 -r bunx --bun eslint --fix --no-warn-ignored",
    "format:staged": "staged_files=$(git diff --relative --cached --name-only --diff-filter=d); bunx --bun eslint --fix --pass-on-no-patterns --no-warn-ignored $staged_files && git add $staged_files",
    "typecheck": "tsc --noEmit",
    "typecheck:tsgo": "tsgo --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "precommit": "bun run lint:staged"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "better-auth": "^1.3.17",
    "drizzle-cuid2": "^2.1.0",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.8",
    "hono-pino": "^0.10.2",
    "nodemailer": "^7.0.6",
    "pino": "^9.11.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@libsql/client": "^0.15.15",
    "@types/bun": "^1.2.22",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.36.0",
    "eslint-plugin-format": "^1.0.2",
    "jiti": "^2.6.0",
    "pino-pretty": "^13.1.1",
    "simple-git-hooks": "^2.13.1"
  },
  "simple-git-hooks": {
    "pre-commit": "bun precommit"
  }
}
